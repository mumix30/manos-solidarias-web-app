@model IReadOnlyList<ManosSolidarias.Mvc.Entities.Role>
@{
    ViewData["Title"] = "Roles";
}

<section class="page">
    <div class="page-header">
        <h1>Roles</h1>
        <a class="button" asp-action="Create">Nuevo rol</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Rol</th>
                <th>Estatus</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Rol</td>
                    <td>@role.Estatus</td>
                </tr>
            }
        </tbody>
    </table>
</section>
